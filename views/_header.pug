header.header
    nav.nav.nav--menu
        if user
            a.nav__el(href='/me') Vedant's  Yoga  Studio
        else
            a.nav__el(href='/login') Vedant's  Yoga  Studio
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log Out
            a.nav__el(href='/me') 
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el.nav__el--cta(href='/login') Log In
            a.nav__el.nav__el--cta(href='/signup') Sign Up